{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Petrol Data Worldwide",
    "width": 800,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "params":[
        {
            "name": "Continent_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Africa",
                    "Asia",
                    "Europe",
                    "North America",
                    "Oceania",
                    "South America"
                ],
                "labels": [
                    "Show All",
                    "Africa",
                    "Asia",
                    "Europe",
                    "North America",
                    "Oceania",
                    "South America"
                ],
                "name": "Continent Selection: "
            }
        }
    ],
    "transform": [
        {
            "lookup": "properties.NAME_LONG",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/SY-253/FIT3179/main/Petrol%20Dataset%202023.csv"
                },
                "key": "Country",
                "fields": [
                    "Price Per Liter (USD)",
                    "GDP Per Capita ( USD )",
                    "Daily Oil Consumption (Barrels)"
                ]
            }
        },
        {
            "calculate": "datum.properties.CONTINENT",
            "as": "Continent"
        },
        {"filter": "Continent_selection == null || datum.Continent == Continent_selection"}
    ],
    "encoding": {
        "x": {
            "field": "GDP Per Capita ( USD )",
            "type": "quantitative",
            "title": "GDP Per Capita (USD)",
            "axis": {"tickCount": 10},
            "scale": {"type": "log", "domain": [250, 120000]}
        },
        "y" : {
            "field": "Price Per Liter (USD)",
            "type": "quantitative",
            "axis": {"tickCount": 6},
            "scale": {"domain": [0, 3]}
        }
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "size": {
                    "field": "Daily Oil Consumption (Barrels)",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [100000, 1000000, 2000000, 3000000, 4000000],
                        "range": [10, 50, 150, 200, 300, 400]
                    },
                    "legend": {"format": ".1s"}
                },
                "color": {
                    "field": "Continent",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "North America",
                            "South America",
                            "Europe",
                            "Africa",
                            "Asia",
                            "Oceania"
                            ],
                        "range": [
                            "#e41a1c",
                            "#984ea3",
                            "#ff7f00",
                            "#a6cee3",
                            "#377eb8",
                            "#a65628"
                        ]
                    }
                },
                "opacity": {"value": 0.6},
                "tooltip": [
                    {"field": "properties.NAME_LONG", "title": "Country"},
                    {"field": "GDP Per Capita ( USD )", "title": "GDP Per Capita (USD)", "format": ","},
                    {"field": "Price Per Liter (USD)"},
                    {"field": "Daily Oil Consumption (Barrels)", "format": ","}
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": 12,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {"field": "properties.NAME_LONG", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                        "test": "datum['Daily Oil Consumption (Barrels)'] > 2000000",
                        "value": 1
                    },
                    "value": 0
                },
                "tooltip": [
                    {"field": "properties.NAME_LONG", "title": "Country"},
                    {"field": "GDP Per Capita ( USD )", "title": "GDP Per Capita (USD)", "format": ","},
                    {"field": "Price Per Liter (USD)"},
                    {"field": "Daily Oil Consumption (Barrels)", "format": ","}
                ]
            }
        }    
    ]
}